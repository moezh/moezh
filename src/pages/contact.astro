---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import Email from "../../public/assets/email.svg?raw";
import Whatsapp from "../../public/assets/whatsapp.svg?raw";

const schema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "@id": "https://moezh.com/contact/#contactpage",
  url: "https://moezh.com/contact/",
  name: "Contact Moez H.",
  description:
    "Official contact page for Moez H. â€” email and WhatsApp for professional inquiries, collaborations, and support.",
  inLanguage: "en",
  primaryEntityOfPage: {
    "@type": "Organization",
    "@id": "https://moezh.com/#organization",
  },
  mainEntity: {
    "@type": "Organization",
    "@id": "https://moezh.com/#organization",
    name: "Moez H.",
    url: "https://moezh.com",
    logo: "https://moezh.com/logo.svg",
    contactPoint: [
      {
        "@type": "ContactPoint",
        "@id": "https://moezh.com/contact/#email",
        contactType: "professional inquiries",
        email: "contact@moezh.com",
        availableLanguage: ["English", "french"],
      },
      {
        "@type": "ContactPoint",
        "@id": "https://moezh.com/contact/#whatsapp",
        contactType: "WhatsApp support",
        telephone: "+21629133300",
        availableLanguage: ["English", "french"],
      },
    ],
  },
  potentialAction: [
    {
      "@type": "CommunicateAction",
      name: "Send Email to Moez H.",
      target: {
        "@type": "EntryPoint",
        urlTemplate: "mailto:contact@moezh.com",
      },
    },
    {
      "@type": "CommunicateAction",
      name: "Message via WhatsApp",
      target: {
        "@type": "EntryPoint",
        urlTemplate: "https://wa.me/21629133300",
      },
    },
  ],
};
---

<Layout
  title="Contact"
  description="If you have any questions, inquiries, or concerns, no matter how big or small, please do not hesitate to reach out to me."
  schema={schema}
>
  <div class="container">
    <h1>Let's Connect</h1>
  </div>
  <div class="container pt-4">
    <p>
      If you have any questions, inquiries, or concerns, no matter how big or
      small, please do not hesitate to connect with me via:
    </p>
    <div class="flex flex-row flex-wrap justify-left">
      <div class="flex flex-col items-left w-1/3 min-w-24 py-8">
        <div class="w-6">
          <a
            href={`mailto:contact@moezh.com`}
            target="_blank"
            aria-label="Get in touch via email"
          >
            <Fragment set:html={Email} />
          </a>
        </div>
        <p>Email</p><small>contact@moezh.com</small>
      </div>
      <div class="flex flex-col items-left w-1/3 min-w-24 py-8">
        <div class="w-6">
          <a
            href={`https://wa.me/21629133300`}
            target="_blank"
            aria-label="Get in touch via whatsapp"
          >
            <Fragment set:html={Whatsapp} />
          </a>
        </div>
        <p>Whatsapp</p><small>21629133300</small>
      </div>
    </div>
  </div>
</Layout>
