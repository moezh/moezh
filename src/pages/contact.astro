---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import Email from "../../public/assets/email.svg?raw";
import Whatsapp from "../../public/assets/whatsapp.svg?raw";

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Person",
      "@id": "https://moezh.com/#person",
      name: "Moez Hachicha",
      jobTitle: "Senior Software Engineer",
      url: "https://moezh.com",
      sameAs: [
        "https://www.linkedin.com/in/moez-h",
        "https://github.com/moezh",
      ],
      knowsAbout: ["React", "Node.js", "TypeScript", "PostgreSQL"],
    },
    {
      "@type": "ContactPage",
      "@id": "https://moezh.com/contact/#contact",
      url: "https://moezh.com/contact/",
      name: "Contact Moez H.",
      description:
        "Official contact page for Moez H. - contact via email or WhatsApp.",
      inLanguage: "en",
      mainEntity: {
        "@type": "Organization",
        "@id": "https://moezh.com/#organization",
        name: "Moez H.",
        url: "https://moezh.com",
        logo: "https://moezh.com/logo.svg",
        founder: { "@id": "https://moezh.com/#person" },
        sameAs: [
          "https://www.linkedin.com/in/moez-h",
          "https://github.com/moezh",
        ],
        contactPoint: [
          {
            "@type": "ContactPoint",
            contactType: "email",
            email: "contact@moezh.com",
            availableLanguage: ["English", "French"],
          },
          {
            "@type": "ContactPoint",
            contactType: "WhatsApp",
            telephone: "+21629133300",
            availableLanguage: ["English", "French"],
          },
        ],
      },
      potentialAction: [
        {
          "@type": "CommunicateAction",
          name: "Send Email",
          target: {
            "@type": "EntryPoint",
            urlTemplate: "mailto:contact@moezh.com",
          },
        },
        {
          "@type": "CommunicateAction",
          name: "Chat on WhatsApp",
          target: {
            "@type": "EntryPoint",
            urlTemplate: "https://wa.me/21629133300",
          },
        },
      ],
    },
  ],
};
---

<Layout
  title="Contact"
  description="If you have any questions, inquiries, or concerns, no matter how big or small, please do not hesitate to reach out to me."
  schema={schema}
>
  <div class="container">
    <h1>Let's Connect</h1>
  </div>
  <div class="container pt-4">
    <p>
      If you have any questions, inquiries, or concerns, no matter how big or
      small, please do not hesitate to connect with me via:
    </p>
    <div class="flex flex-row flex-wrap justify-left">
      <div class="flex flex-col items-left w-1/3 min-w-24 py-8">
        <a
          href={`mailto:contact@moezh.com`}
          target="_blank"
          aria-label="Get in touch via email"
          class="w-fit"
        >
          <Fragment set:html={Email} />
          <p>Email</p>
          <small>contact@moezh.com</small>
        </a>
      </div>
      <div class="flex flex-col items-left w-1/3 min-w-24 py-8">
        <a
          href={`https://wa.me/21629133300`}
          target="_blank"
          aria-label="Get in touch via whatsapp"
          class="w-fit"
        >
          <Fragment set:html={Whatsapp} />
          <p>Whatsapp</p>
          <small>+21629133300</small>
        </a>
      </div>
    </div>
  </div>
</Layout>
